  <!-- breadcrumb end-->

  <!-- ================ signup form section start ================= -->
<section class="contact-section section_padding">
  <div class="container">   
    <div class="row">
      <div class="col-12">
        <h2 class="contact-title">Personal Details</h2>
      </div>
      <div class="col-lg-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-contact contact_form', id: 'signupForm', novalidate: 'novalidate'}) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email",class: 'form-control emailField' %>
          </div>
          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password",class: 'form-control passwordField' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password",class: 'form-control confpasswordField' %>
          </div>
          <div class="form-group">
            <%= f.text_field :first_name, placeholder:"First Name",class: 'form-control firstnameField ' %>
          </div>
          <div class="form-group">
           <%= f.text_field :last_name, placeholder:"Last Name",class: 'form-control lastnameField'  %>
          </div>
          <div class="form-group">
           <%= f.text_field :address, placeholder:"Address",class: 'form-control addressField'  %>
          </div>
          <div class="form-group">
           <%= f.text_field :contact_no, placeholder:"Contact no",class: 'form-control contactField'  %>
          </div>
          <div class="form-group mt-3">
            <button type="submit" class="button button-contactForm btn_4">Sign Up</button>
          </div>
        <%end%>
        <div class="margin">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>

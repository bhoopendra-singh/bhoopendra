<h2 align = 'center'><i>History of order</i></h2><br><br>
<table id="order_history">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody> 
    <%current_user.orders.each do |order|%>
      <%order.cart_items.each do |cartitem|%>
        <tr>
          <td> <%=order.created_at.strftime("%d/%m/%Y")%></td>
          <td><%= cartitem.food_item.name%></td>
          <td><%= cartitem.quantity%></td>
          <td><%= cartitem.food_item.price%></td>
          <td><%= cartitem.food_item.price*cartitem.quantity%></td> 
        </tr>
      <%end%>
    <%end%>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#order_history").dataTable();
  });
</script>
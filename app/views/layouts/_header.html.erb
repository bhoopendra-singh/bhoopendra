<header class="main_menu home_menu">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-12">
        <nav class="navbar navbar-expand-lg navbar-light">
          <a class="navbar-brand" href="index.html"><%= image_tag("logo.png", :alt => "logo feed") %> </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse"
              data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
              aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse main-menu-item justify-content-end"
              id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item">
                  <a class="nav-link" href="<%=root_path%>">Home</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="<%=about_us_path%>">About</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="<%=menu_path%>">Menu</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="<%=offers_path%>">Offers</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="<%=contact_us_path%>">Contact</a>
              </li>
            </ul>
          </div>
          <div style="overflow: hidden;" class="menu_btn">
            <% if user_signed_in? %>
            <p style="float: left;">
              <%= link_to 'View Cart',cart_path(current_user.cart.id),:class => "btn_1 d-none d-sm-block header headerlinkcenter"%>
            </p>
            <p style="float: right;">
              <%= link_to 'Logout', destroy_user_session_path, :method => :delete, :class => "btn_1 d-none d-sm-block header headerlinkcenter" %> 
            </p>       
            <% else %>
              <p style="float: left;">
                <%= link_to 'Login', new_user_session_path, :class => "btn_1 d-none d-sm-block header headerlinkcenter" %></p>
              <p style="float: right;"><%= link_to 'Register', new_user_registration_path, :class  => "btn_1 d-none d-sm-block header headerlinkcenter "  %></p> 
            <% end %>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>

